<!DOCTYPE html>
<html>
    <head>
        <title>@ViewData["appTitle"]</title>
        <meta charset="utf-8" />
        <style>
            html, body{
                height: 100%;
            }
            body{
                font-family: Arial, Helvetica, sans-serif;
                margin: 0px;
                display: flex;
                justify-content: center;
                align-items: center;
            }
            li{
                color: green;
                text-align: right;
                list-style: none;
                display: flex;
                justify-content: right;
                margin-bottom: 10px;
            }
            li > p{
                margin-right: 10px;
                font-weight: bold;
                color: black;
            }
            li > input {
                color: blue;
                border-color: blue;
                font-size: 16px;
                padding: 5px;
                width: 60px;
            }
            .container{
                display: flex;
                flex-direction: column;
                height: 400px;
                width: 600px;
                border: solid 1px blue;
                justify-content: space-between;
            
            }
            .items{
                display: flex;
                align-items: center;
                justify-content: space-evenly;
                height: 100%;
            }
            .display{
                display: flex;
                align-items: center;
                margin-inline: 20px;
                color: @ViewBag.color;
                font-size: @(ViewBag.size + "px");
                font-weight: @ViewBag.weight;
            }
            .button{
                display: flex;
                justify-content: flex-end;
                padding-right: 10px;
                padding-block: 10px;
            }
        </style>
    </head>
    <body>
         @using (Html.BeginForm()) {
        <div class="container">

            <div class="items">
           
            <div class="inputs">
                <ul>
                    <li>
                        <p>Farbe</p>
                        <input type="text" id="color" name="color" value="@ViewBag.color"/>
                    </li>
                    <li>
                        <p>Grösse</p>
                        <input type="text" id="color" name="size" value="@ViewBag.size" />
                    </li>
                    <li>
                        <p>Gewicht</p>
                        <input type="text" id="color" name="weight" value="@ViewBag.weight" />
                    </li>
                </ul>
            </div>
            
            <div class="display">
                <span>gÄ</span>
            </div>
            </div>

            <div class="button">
                <input type="submit" value="Anweden" class="" />
            </div>

        </div>

    }
    </body>
</html>