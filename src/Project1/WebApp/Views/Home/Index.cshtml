@using WebApp.Models
@{
    Person person = new Person() { Name = "John", DateOfBirth = Convert.ToDateTime("2000-07-01") };
}
<!DOCTYPE html>
<html>
    <head>
        <title>@ViewData["appTitle"]</title>
        <meta charset="utf-8" />
    </head>
    <body>
        <h1>Welcome Home</h1>
        <h2>Hello @person.Name</h2>
    @{
        double age = Math.Round((DateTime.Now - person.DateOfBirth).TotalDays / 365.25);
    }
        <h3>@age years old</h3>
        <input type="submit" name="Cal" value="10"/>
    </body>
</html>